@{
    ViewBag.Title = "Thành công";
    Layout = null;
}

<style>
    body {
        font-family: Arial, sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-color: #f1f1f1;
        margin: 0;
    }

    .notification {
        background-color: #28a745; /* Màu xanh lá */
        color: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
        max-width: 400px;
        text-align: center;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

        .notification i {
            font-size: 40px;
            margin-bottom: 10px;
        }

        .notification h2 {
            margin: 0;
            font-size: 24px;
        }

        .notification p {
            margin: 10px 0 0;
            font-size: 16px;
        }

    .btn-ok {
        background-color: #17a2b8; /* Màu xanh lam */
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        margin-top: 20px;
        font-size: 16px;
        transition: background-color 0.3s;
    }

        .btn-ok:hover {
            background-color: #138496;
        }
</style>
</head>
<body>

    <div class="notification">
        <i class="fa fa-check-circle"></i>
        <h2>Đặt vé thành công!</h2>
        <p>Cảm ơn bạn đã đặt vé. Chúc bạn có một chuyến đi vui vẻ!</p>
        <button class="btn-ok" onclick="window.location.href='/Home/Index'">OK</button>
    </div>

</body>