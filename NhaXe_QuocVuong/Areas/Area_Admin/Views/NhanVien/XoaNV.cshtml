@model NhaXe_QuocVuong.Models.NHANVIEN

@{ ViewBag.Title = "Xóa Nhân Viên";
                Layout = "~/Areas/Area_Admin/Views/Shared/LayoutAdmin.cshtml"; }

<head>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #f5f7fa, #e4ebf1); 
            font-family: 'Poppins', sans-serif;
        }

        .confirmation-container {
            background: #ffffff;
            border-radius: 16px;
            padding: 50px;
            max-width: 500px;
            margin: 100px auto;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
            text-align: center;
            transition: all 0.3s ease;
        }

            .confirmation-container:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
            }

        h3 {
            color: #e63946;
            font-size: 24px;
            font-weight: 700;
        }

        p {
            font-size: 16px;
            color: #6c757d;
        }

        .detail {
            background: #f8f9fa;
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 20px;
            text-align: left;
            font-size: 15px;
            color: #495057;
            line-height: 1.6;
        }

            .detail strong {
                color: #343a40;
            }

        .btn-custom {
            padding: 12px 30px;
            font-size: 16px;
            font-weight: 600;
            border-radius: 50px;
            margin: 10px;
            transition: all 0.3s ease;
        }

        .btn-danger {
            background-color: #e63946;
            border-color: #e63946;
            color: white;
        }

            .btn-danger:hover {
                background-color: #d62839;
                transform: scale(1.05);
            }

        .btn-secondary {
            background-color: #495057;
            border-color: #495057;
            color: white;
        }

            .btn-secondary:hover {
                background-color: #343a40;
                transform: scale(1.05);
            }

        .alert {
            margin-top: 20px;
        }
    </style>
</head>

<div class="container">
    <div class="confirmation-container">
        <h3>XÁC NHẬN XÓA TÀI XẾ</h3>
        <div class="detail mt-4">
            <p><strong>Tên nhân viên:</strong> @Model.TEN_NHANVIEN</p>
            <p><strong>Email:</strong> @Model.EMAIL</p>
            <p><strong>Số điện thoại:</strong> @Model.SDT</p>
            @*<p><strong>Loại nhân viên:</strong> @Model.LOAI_NV</p>*@
        </div>

        
        @if (TempData["Error"] != null)
        {
<div class="alert alert-danger">
    @TempData["Error"]
</div>}

        
        @if (TempData["Message"] != null)
        {
<div class="alert alert-success">
    @TempData["Message"]
</div>}

        @using (Html.BeginForm("XoaNV", "NhanVien", FormMethod.Post))
        {
@Html.Hidden("username", Model.USERNAME)
                <div class="d-flex justify-content-center mt-4">
                    <input type="submit" class="btn btn-danger btn-custom" value="Xóa" />
                    @Html.ActionLink("Hủy", "DanhSachNV", null, new { @class = "btn btn-secondary btn-custom" })
                </div>}
    </div>
</div>