@using NhaXe_QuocVuong.Models
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Simple Responsive Admin</title>
    <!-- BOOTSTRAP STYLES-->
    <link href="~/Areas/Area_Admin/assets/css/bootstrap.css" rel="stylesheet" />
    <!-- FONTAWESOME STYLES-->
    @*<link href="~/Areas/Area_Admin/assets/css/font-awesome.css" rel="stylesheet" />*@
    <link href="~/Content/fontawesome-free-6.6.0-web/css/all.min.css" rel="stylesheet" />
    <!-- CUSTOM STYLES-->
    <link href="~/Areas/Area_Admin/assets/css/custom.css" rel="stylesheet" />
    <!-- GOOGLE FONTS-->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />
  
    <style>
        .nav-right {
            float: right;
            padding-right: 70px;
            display: flex;
            align-items: center;
            padding-top: 20px;
        }
    </style>

</head>
<body>
    <div id="">
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="adjust-nav">

                <div class="navbar-title">
                    <p style="font-size:40px;font-weight:800;color:white;float:left;margin-top:20px;margin-left:10px">ADMIN</p>
                </div>

                <div class="nav-right">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>

                    <div>
                        @if (Session["quanly"] == null)
                        {
                            <div class="dn"><a class="nav-link" href="~/DangNhapAdmin/Login_Admin"><i class="fa-solid fa-user"></i> Đăng nhập</a></div>
                        }
                        else
                        {
                            var tenQl = Session["quanly"] as userAccount;

                            <div class="dropdown">
                                <a class="dropdown-toggle" role="button" href="#" style="color:white;border: 0px;text-decoration:none" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fa-solid fa-user"></i>
                                    Hi, @tenQl.NHANVIEN.TEN_NHANVIEN
                                </a>

                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                    <li><a class="dropdown-item" href="~/DangNhapAdmin/ThongTinTaiKhoan">Thông tin tài khoản</a></li>
                                    <li><a class="dropdown-item" href="~/DangNhapAdmin/Logout">Đăng Xuất</a></li>
                                </ul>
                            </div>

                        }
                    </div>
                </div>
            </div>
        </div>


        <nav class="navbar-default navbar-side" role="navigation">
            <div class="sidebar-collapse" >
                <ul class="nav" id="main-menu" style="padding-top:0">

                    <li>
                        <a href="@Url.Action("Index", "QuanLyLichTrinh")">
                            <i class="fa fa-table"></i> Quản lý lịch trình
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("DanhSachNV", "NhanVien")">
                            <i class="fa fa-table"></i> Quản lý Nhân viên
                        </a>
                    </li>


                    <li>
                        <a href="@Url.Action("DanhSachDD", "DiaDiem")">

                            <i class="fa fa-table"></i> Quản lý Địa điểm
                        </a>

                    </li>
                    <li>
                        <a href="@Url.Action("Index", "Xe")">
                            <i class="fa fa-table"></i> Quản lý Xe
                        </a>
                    </li>


                    <li>
                        <a href="@Url.Action("Index", "TramDungChan")">
                            <i class="fa fa-table"></i> Quản lý Trạm Dừng Chân
                        </a>
                    </li>


                    <li>
                        <a href="@Url.Action("Index", "TuyenDuong")">

                            <i class="fa fa-table"></i> Quản lý Tuyến Đường
                        </a>

                    </li>


                </ul>
            </div>

        </nav>

        <div id="page-wrapper">
            <div class="container-fluid mt-4">
                @RenderBody()
            </div>
        </div>
    </div>






    @*<script src="~/Areas/Area_Admin/assets/js/jquery-1.10.2.js"></script>
        <script src="~/Areas/Area_Admin/assets/js/bootstrap.min.js"></script>*@
    <script src="~/Content/js/bootstrap.min.js"></script>
    <script src="~/Content/js/bootstrap.bundle.min.js"></script>
    <script src="~/Areas/Area_Admin/assets/js/custom.js"></script>
   
</body>
</html>
