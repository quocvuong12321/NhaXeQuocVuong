<h1 class="page-title">QUẢN LÝ TUYẾN ĐƯỜNG</h1>

<div class="container">
    @*<div class="card-container">*@

        <!-- Form tìm kiếm -->
        <form>
            <div class="row">
                <div class="col-7">
                    <input type="search" class="form-control" id="search" name="search" value="@ViewBag.Search" placeholder="Nhập Tên Tuyến Đường" />
                </div>
                <div class="col-3">
                    <button type="submit" class="btn btn-danger">Tìm kiếm</button>
                </div>
            </div>
        </form>
        
        <!-- Nút Thêm Tuyến Đường -->
        <a href="~/Area_Admin/TuyenDuong/Create" class="btn btn-add">
            <i class="bi bi-plus-lg"></i> Tạo Tuyến Đường Mới
        </a>

        <!-- Bảng Danh Sách Tuyến Đường -->
        <div class="table-container">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        @*<th>ID Tuyến</th>*@
                        <th>Tên Tuyến</th>
                        <th>Điểm Đầu</th>
                        <th>Điểm Cuối</th>
                        <th>Khoảng Cách</th>
                        <th>Thời Gian Di Chuyển</th>
                        <th>Tình Trạng</th>
                        <th>Thao Tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            @*<td>@item.ID_TUYEN</td>*@
                            <td>@item.TEN_TUYEN</td>
                            <td>@item.DiaDiem.TEN_TINH_THANH</td>
                            <td>@item.DiaDiem1.TEN_TINH_THANH</td>
                            <td>@item.KHOANG_CACH.ToString("F2") km</td>
                            <td>@item.THOI_GIAN_DUY_CHUYEN giờ</td>
                            <td>@item.TINH_TRANG</td>
                            <td>
                                <a href="@Url.Action("Edit", new { id = item.ID_TUYEN })" class="btn btn-update me-2">Cập nhật</a>
                                <a href="@Url.Action("Delete", new { id = item.ID_TUYEN })" class="btn btn-delete" onclick="return confirm('Bạn có chắc chắn muốn xóa?')">Xóa</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    @*</div>*@
</div>
