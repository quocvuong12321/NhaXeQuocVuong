@model NhaXe_QuocVuong.Models.TuyenDuong

@{
    ViewBag.Title = "Xóa Tuyến Đường";
    Layout = "~/Areas/Area_Admin/Views/Shared/LayoutAdmin.cshtml";
}

<div class="container mt-5">
    <div class="confirmation-container">
        <h3 class="text-center text-danger">XÁC NHẬN XÓA TUYẾN ĐƯỜNG</h3>
        <div class="detail mt-4">
            <p><strong>Tên Tuyến:</strong> @Model.TEN_TUYEN</p>
            <p><strong>Điểm Đầu:</strong> @Model.DIEM_DAU</p>
            <p><strong>Điểm Cuối:</strong> @Model.DIEM_CUOI</p>
            <p><strong>Khoảng Cách:</strong> @Model.KHOANG_CACH</p>
            <p><strong>Thời Gian Duy Chuyển:</strong> @Model.THOI_GIAN_DUY_CHUYEN</p>
            <p><strong>Tình Trạng:</strong> @Model.TINH_TRANG</p>
        </div>

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">
                @TempData["Error"]
            </div>
        }

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success">
                @TempData["Message"]
            </div>
        }

        @using (Html.BeginForm("Delete", "TuyenDuong", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            @Html.HiddenFor(model => model.ID_TUYEN)

            <div class="d-flex justify-content-center mt-4">
                <input type="submit" class="btn btn-danger btn-custom" value="Xóa Tuyến Đường" />
                @Html.ActionLink("Trở lại danh sách", "Index", null, new { @class = "btn btn-secondary btn-custom" })
            </div>
        }
    </div>
</div>

<style>
    .confirmation-container {
        background: #ffffff;
        border-radius: 16px;
        padding: 50px;
        max-width: 500px;
        margin: 100px auto;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        text-align: center;
        transition: all 0.3s ease;
    }

        .confirmation-container:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
        }

    h3 {
        color: #e63946;
        font-size: 24px;
        font-weight: 700;
    }

    p {
        font-size: 16px;
        color: #6c757d;
    }

    .detail {
        background: #f8f9fa;
        padding: 15px;
        border-radius: 8px;
        margin-bottom: 20px;
        text-align: left;
        font-size: 15px;
        color: #495057;
        line-height: 1.6;
    }

        .detail strong {
            color: #343a40;
        }

    .btn-custom {
        padding: 12px 30px;
        font-size: 16px;
        font-weight: 600;
        border-radius: 50px;
        margin: 10px;
        transition: all 0.3s ease;
    }

    .btn-danger {
        background-color: #e63946;
        border-color: #e63946;
        color: white;
    }

        .btn-danger:hover {
            background-color: #d62839;
            transform: scale(1.05);
        }

    .btn-secondary {
        background-color: #495057;
        border-color: #495057;
        color: white;
    }

        .btn-secondary:hover {
            background-color: #343a40;
            transform: scale(1.05);
        }

    .alert {
        margin-top: 20px;
    }
</style>
