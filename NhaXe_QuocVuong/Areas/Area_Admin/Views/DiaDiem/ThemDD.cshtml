@using NhaXe_QuocVuong.Models
@model NhaXe_QuocVuong.Models.DiaDiem
@{ ViewBag.Title = "ThemDD"; Layout = "~/Areas/Area_Admin/Views/Shared/LayoutAdmin.cshtml"; }

<div class="container-fluid vh-100 d-flex align-items-center justify-content-center" style="background-color: #edf2f7;">
    <div class="form-container">
        <div class="form-header text-center mb-4">
            <h3>THÊM ĐỊA ĐIỂM MỚI</h3>
        </div>

        <div class="form-body">
            @using (Html.BeginForm())
            {
@Html.AntiForgeryToken()
                                <div class="form-group mb-4">
                                    @Html.LabelFor(model => model.TEN_TINH_THANH, "Tên Tỉnh Thành", new { @class = "form-label" })
                                    @Html.TextBoxFor(model => model.TEN_TINH_THANH, new { @class = "form-control", placeholder = "Nhập tên địa điểm...", @required = "required" })
                                </div> 
                                                                <div class="form-footer d-flex justify-content-between mt-3">
                                                                    <button type="submit" class="btn btn-primary btn-lg px-4">
                                                                        <i class="fa fa-save"></i> Thêm Địa Điểm 
                                                                    </button>
                                                                    @Html.ActionLink("Quay Lại", "DanhSachDD", null, new { @class = "btn btn-light btn-lg px-4" })
                                                                </div>            }
        </div>
    </div>
</div>

<script>
    $(document).ready(function() {
        @if (ViewBag.Message != null)
        {
            <text>
                Swal.fire({
                    icon: 'success',
                    title: 'Thành công!',
                    text: '@ViewBag.Message',
                    confirmButtonText: 'Đóng'
                });
            </text>
        }
    });
</script>

